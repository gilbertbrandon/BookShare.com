<br />
<div class="container row p-0 m-0">
	<div class="col-6">
		<h2 class="text-info">Book List</h2>
	</div>
	<div class="col-3 offset-3">
		<a asp-action="Upsert" asp-controller="Books" class="btn btn-info form-control text-white">
			Add New Book
		</a>
	</div>
	<div class="col-12 border p-3">
		<table id="DT_load" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>Name</th>
					<th>Author</th>
					<th>ISBN</th>
					<th>Date</th>
					<th>UploadedBy</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>
<hr />
<h6 class="text-info">Please contact us using the Feeback tab on the left hand side of the webpage to make edit and delete requests for your books.</h6>
<h6 class="text-info">You may also report errors and provide your concerns on the feeback tab.</h6>

@section Scripts{
	<script src="~/js/bookList.js"></script>
}